<section5 class="flexbox-contact-dialog-container">
        <div class="flexbox-container center">
            <div class="dialog-box-container">
                @*Start new form here.*@
                <div class="flexbox-container">
                    <form method="post" action="/Contact" enctype="multipart/form-data">
                        <center><img src="/icon/device-message.svg" style="height:100px;justify-content:center;" /></center>
                        <center><h1>Contact</h1></center>
                        <div class="form-floating mb-3">
                            <p><div asp-validation-summary="ModelOnly" class="alert-color hidden"></div></p>
                            <input asp-for="Name" id="Name" class="form-control" placeholder="First/Last Name" required />
                            <label asp-for="Name">Name</label>
                            <p style="margin:10px;"><span asp-validation-for="Name" class="alert-color"></span></p>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Business" class="form-control" id="Business" placeholder="Company Name" required />
                            <label asp-for="Business"></label>
                            <p style="margin:5px;"><span asp-validation-for="Business" class="alert-color"></span></p>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Phone" id="Phone" name="Phone" placeholder="(XXX) XXX-XXXX" class="form-control" required />
                            <label asp-for="Phone"></label>
                            <p style="margin:5px;"><span asp-validation-for="Phone" class="alert-color"></span></p>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Email" id="Email" class="form-control" placeholder="example@somewhere.com" required />
                            <label asp-for="Email"></label>
                            <p style="margin:5px;"><span asp-validation-for="Email" class="alert-color"></span></p>
                        </div>
                        <div class="form-floating mb-3">
                            <textarea asp-for="Message" id="Message" class="form-control" style="height: 100px" placeholder="Message" required></textarea>
                            <label asp-for="Message"></label>
                            <p style="margin:5px;"><span asp-validation-for="Message" class="alert-color"></span></p>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="startDate" class="form-control" id="startDate" />
                            <label asp-for="startDate"></label>
                            <p style="margin:5px;"><span asp-validation-for="startDate" class="alert-color"></span></p>
                        </div>
                        <div class="form-floating mb-3">
                            <select class="form-control" asp-for="priorityLevel" name="priorityLevel" id="priorityLevel">
                                <option>High</option>
                                <option>Medium</option>
                                <option>Low</option>
                            </select>
                            <label asp-for="priorityLevel"></label>
                            <p style="margin:5px;"><p><span asp-validation-for="priorityLevel" class="alert-color"></span></p>
                        </div>
                        <div class="form-floating mb-3">
                            <center><button type="submit" class="form-button">Send</button></center>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section5>
