<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Designing and implementing high value software engineering solutions in the Marietta Georgia and surrounding areas.">
    <meta name="keywords" content="Marietta, Atlanta, Georgia, Software, Design, Development, Implementation, Web Development, ERPNext, IOT, AI, Consulting">
    <meta name="author" content="Magnadigi.com: Russell Steele">
    <meta name="robots" content="index,follow">
    <meta name="viewport" content="width=device-width">
    <link rel="canonical" href="https://magnadigi.com" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@ViewData["Title"] - Magnadigi.com" />
    <meta property="og:description" content="Planning, designing, and implementing software engineering solutions in the Atlanta Georgia area with an emphasis on small to medium sized businesses." />
    <meta property="og:url" content="https://magnadigi.com/" />
    <meta property="og:site_name" content="Magnadigi Software Engineering" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script defer src="/js/site.js"></script>
    <script defer src="/js/home.js"></script>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script><!--Phone Number Transform-->

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/frappe-gantt.min.js"></script><!--Gantt Dependency-->
    <script src="/js/moment.min.js"></script><!--Gantt Dependency-->
    <script src="/js/snap.svg-min.js"></script><!--Gantt Dependency-->
    <link rel="stylesheet" href="/js/frappe-gantt.css" />
    

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/vast-engineering/jquery-popup-overlay@2/jquery.popupoverlay.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    
    @RenderSection("GoogleAnalyticsScript",false)
</head>
<body>
    @if (User.Identity.IsAuthenticated){
            <nav class="navbar">
            <div class="navbar-logo"><a asp-area="Home" asp-controller="Home" asp-action="Index"><img src="/img/growth-border.png" width="50" class="img-fluid" /><img src="/img/digilogo.png" width="200" class="img-fluid" /></a></div>
            <a href="#" class="toggle-button">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </a>
                <div class="navbar-links">
                    <ul>
                        <li><a asp-area="Home" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-area="Contact" asp-controller="Home" asp-action="Contact">Contact</a></li>
                        <li><a asp-area="Services" asp-controller="Home" asp-action="Services">Services</a></li>
                        <li><a asp-area="About" asp-controller="Home" asp-action="About">Mission</a></li>
                        <li><a asp-area="Portal" asp-controller="Portal" asp-action="Index" >Customer Portal</a></li>
                    </ul>
                </div>
            </nav><!--navbar-->  
    } else {
        <nav class="navbar"><!--navbar-->
            <div class="navbar-logo"><a asp-area="Home" asp-controller="Home" asp-action="Index"><img src="/img/growth-border.png" width="50" class="img-fluid" /><img src="/img/digilogo.png" width="200" class="img-fluid" /></a></div>
            <a href="#" class="toggle-button">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </a>
            <div class="navbar-links">
                <ul>
                    <li><a asp-area="Home" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="Contact" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    <li><a asp-area="Services" asp-controller="Home" asp-action="Services">Services</a></li>
                    <li><a asp-area="About" asp-controller="Home" asp-action="About">Mission</a></li>
                    <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                </ul>
            </div>
        </nav><!--navbar-->
    }
<div class="wrapper">
    @RenderBody()
</div><!--div wrapper-->
</body>
<!--Footer-->
<div class="flexbox-container-footer">
    <div class="flexbox-row-footer">
        <div class="flexbox-item-footer-text">
            <div class="flexbox-item-footer-text">
                <a>&copy; - Magnadigi LLC - <a asp-area="" asp-controller="Home" asp-action="Privacy" />Privacy</a>
            </div>
        </div>
    </div>
 </div>
<script src="~/js/cleave-phone.us.js"></script><!--Phone Number Transform-->
<script src="~/js/cleave.js"></script><!--Phone Number Transform-->


@await RenderSectionAsync("Scripts", required: false)    
</html>

