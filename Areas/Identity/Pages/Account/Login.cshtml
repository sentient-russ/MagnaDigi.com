@page
@model LoginModel
@{
    ViewData["Title"] = "Log In";
}
<div class="content-block-center">
    <p>Login to upload project files, work with assigned tasks and view project status. </p><p>New clients may register below to get started. </p>
</div>
<div class="flexbox-container center">    
    <div class="dialog-box-container">
        <form id="account" method="post" class="form-login ">            
            <center><img src="~/favicon.ico" height="125px" /></center>
            <center><h2 style="margin-top:0px;">@ViewData["Title"]</h2></center>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" id="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" required />
                <label asp-for="Input.Email"></label>
                <div class="flexbox-container-alert">
                <span asp-validation-for="Input.Email" class="alert-color"></span>           
                </div>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" id="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" required/>
                <label asp-for="Input.Password"></label>
                <div class="flexbox-container-alert">
                <span asp-validation-for="Input.Password" class="alert-color"></span>
                </div>
            </div>
            <div class="form-floating mb-3">
                <div class="form-button-container">
                <div asp-validation-summary="ModelOnly" class="form-text-danger"></div>
                <button id="login-submit" type="submit" class="form-button">Log in</button>
                </div>
            </div>
            <div class="form-floating mb-3">
                <p><a class="flexbox-item-text" id="forgot-password" asp-page="./ForgotPassword">Reset password</a></p>
                <p><a class="flexbox-item-text" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a></p>
                <p><a class="flexbox-item-text" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend Confirmation</a></p>
            </div>
        </form>

    </div>
    <div class="content-block-center" style="margin-top:0px;padding-top:0px;align-content:flex-start">
    <p>To login with a demo account feel free to use the following credentials:</p>

    <p><span class="case-study-text" style="font-size: 1.5rem;">Username:</span></p>
        <p><span class="login-info-formatting" style="font-size: 1.5rem;">demo@magnadigi.com&nbsp</span></p>
        <p><span class="case-study-text" style="font-size: 1.5rem;">Password:</span></p>
        <p><span class="login-info-formatting" style="font-size: 1.5rem;">>Success1@Magnadigi</span></p>
    </div>
</div>
