@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}
<br />
<br />
<div class="content-block-center">
    <p>Enter the email associated with your account to have a reset link sent to your inbox.</p>
</div>
<div class="content-block-center">
<div class="flexbox-container center">
    <div class="dialog-box-container">
        <form method="post" class="form-login">
            <center><img src="~/favicon.ico" height="125px" /></center>
            <center><h2 style="margin-top:0px;">@ViewData["Title"]</h2></center>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" id="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" required/>
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="alert-color"></span>
            </div>
            <div class="form-floating mb-3">
                <div class="form-button-container">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <button id="reset-submit" type="submit" class="form-button">Reset Password</button>
                </div>
            </div>
            <div class="form-floating mb-3">
                <p><a class="flexbox-item-text" id="Login" asp-page="./Login">Back to Login</a></p>
                <p><a class="flexbox-item-text" id="Home" asp-page="./Home">Home</a></p>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
